<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <Button
        android:id="@+id/button_explicity_intent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Explicity Intent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"/>


    <Button
        android:id="@+id/button_implicity_intent_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Implicity Intent + Action"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_explicity_intent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/button_implicity_intent_action_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Implicity Intent + Action + Category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_implicity_intent_action"
        android:layout_marginTop="16dp"/>


    <Button
        android:id="@+id/button_open_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_implicity_intent_action_category"
        android:layout_marginTop="16dp"/>



    <Button
        android:id="@+id/button_make_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make a Call"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_open_page"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/button_create_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Alarm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_make_call"
        android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>